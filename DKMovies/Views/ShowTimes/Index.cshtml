```html
@model IEnumerable<DKMovies.Models.ShowTime>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Movie)</th>
            <th>@Html.DisplayNameFor(model => model.Auditorium)</th>
            <th>@Html.DisplayNameFor(model => model.StartTime)</th>
            <th>@Html.DisplayNameFor(model => model.DurationMinutes)</th>
            <th>@Html.DisplayNameFor(model => model.SubtitleLanguageID)</th>
            <th>@Html.DisplayNameFor(model => model.SubtitleLanguage)</th>
            <th>@Html.DisplayNameFor(model => model.Is3D)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="8">No showtimes found.</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Movie?.Title ?? "No Movie")</td>
                <td>@(item.Auditorium?.Name ?? "No Auditorium")</td>
                <td>@item.StartTime.ToString("dd-MM-yyyy HH:mm")</td>
                <td>@Html.DisplayFor(modelItem => item.DurationMinutes)</td>
                <td>@Html.DisplayFor(modelItem => item.SubtitleLanguageID)</td>
                <td>@(item.SubtitleLanguage?.Name ?? "No Subtitle")</td>
                <td>@Html.DisplayFor(modelItem => item.Is3D)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
